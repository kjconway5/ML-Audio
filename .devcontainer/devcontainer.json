{
    "name": "ML-Audio RTL Development",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "mshr-h.veriloghdl",
                "eirikpre.systemverilog",
                "ms-python.python",
                "ms-vscode.makefile-tools"
            ]
        }
    },
    "remoteUser": "vscode",
    
    
    "postCreateCommand": "pip3 install --user -r /workspace/requirements-ml.txt --break-system-packages",
    
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/python:1": {}
    }
}