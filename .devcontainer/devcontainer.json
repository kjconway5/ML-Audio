{
  "name": "ML-Audio RTL Dev",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "mshr-h.veriloghdl",
        "leafvmaple.verilog",
        "wavetrace.wavetrace"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "forwardPorts": [],
  "postCreateCommand": "pip install cocotb cocotb-test pytest && echo '=== Dev Container Ready ===' && python3 --version && iverilog -V | head -1"
}
